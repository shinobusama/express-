extends change-introduction

block content3-history
	table.table.table-striped.table-bordered
		tr
			td history
			td 
				form(enctype="multipart/form-data" method="post" action="/backstage/change/introduction/history").form-history
					input(type="file" name="img")
					div#item-history-title
						input(type="text" name="title" placeholder="标题")
						input(type="text" name="desc1" placeholder="副标题1")
						input(type="text" name="desc2" placeholder="副标题2")
					div#item-history-desc
						input(type="text" name="desc3_li" placeholder="描述1")
						input(type="text" name="desc3_li" placeholder="描述2")
						input(type="text" name="desc3_li" placeholder="描述3")
						input(type="text" name="desc3_li" placeholder="描述4")
						input(type="text" name="desc3_li" placeholder="描述5")
					input#form-history-submit(type="submit" value="提交")