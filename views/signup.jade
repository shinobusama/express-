extends layout

block content
	div#signup
		div.signup-title.clearfix
			div.signup-left-line.col-sm-5
			div.signup-midle-title.col-sm-2 预约试听课程
			div.signup-right-line.col-sm-5
		form#signup-form(method='post' action='/showMessage')
			div.form-group
				label(for="exampleInputName") 姓名
				input.form-control(type="text" placeholder="请输入正确的中文姓名" name="name")
			div.form-group
				label(for="exampleInputYear") 年龄
				input.form-control(type="text" placeholder="请输入正确的年龄" name="age")
			div.form-group
				label(for="exampleInputTel") 手机号码
				input.form-control(type="text" placeholder="请输入正确的11位手机号码" name="tel")
			button(type="submit" class="btn btn-default") 提交
		p.singup-map-title 学校地址
		div#signup-map

	script(src="http://api.map.baidu.com/api?v=1.0&ak=DD279b2a90afdf0ae7a3796787a0742e")
	script(src="/javascripts/map.js")
	script(src="/javascripts/jquery.min.js")
	script(src="/javascripts/bootstrap.min.js")
	script(src="/javascripts/bootstrapValidator.min.js")
	script(src="/javascripts/signup.js")
